{
    "compilerOptions": {
      "target": "ES2023",
      "module": "CommonJS",
      "lib": ["ESNext", "DOM"],
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "noEmitOnError": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }